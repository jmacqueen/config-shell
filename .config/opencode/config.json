{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "autoshare": false,
  "autoupdate": false,
  "model": "github-copilot/gpt-5.1-codex-mini",
  "keybinds": {
    "leader": "ctrl+o",
    "session_child_cycle": "<leader>right",
    "session_child_cycle_reverse": "<leader>left"
  },
  "instructions": ["{file:./AGENTS-local.md}"],
  "provider": {
    "bs-ai-mcl": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Bitsight AI Gateway",
      "options": {
        "baseURL": "{env:BS_LLM_API_BASE_DEV}",
        "apiKey": "{env:BS_LLM_API_KEY_DEV}"
      },
      "models": {
        "gemini-2.5-flash": {
          "name": "gemini-2.5-flash"
        }
      }
    }
  },
  "agent": {
    "plan": {
      "model": "github-copilot/claude-opus-4.5",
      "permission": {
        "edit": {
          "*": "ask",
          "*.md": "allow",
          "*.mdx": "allow",
          "*.txt": "allow"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": false
    },
    "sequentialthinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": false
    },
    "searxng": {
      "type": "local",
      "environment": {
        "SEARXNG_URL": "http://localhost:8888/"
      },
      "command": ["npx", "-y", "mcp-searxng"],
      "enabled": true
    }
  }
}
